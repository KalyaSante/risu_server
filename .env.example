TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
SESSION_DRIVER=cookie

# === Configuration OAuth ===
# URL de base de votre serveur OAuth
OAUTH_BASE_URL=https://auth.example.com

# Identifiants OAuth de votre application
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret

# URL de callback (doit être configurée côté serveur OAuth)
OAUTH_REDIRECT_URI=http://localhost:3333/auth/callback

# Scopes demandés (séparés par des virgules)
OAUTH_SCOPES=read:user,user:email

# === Endpoints OAuth (personnalisables) ===
OAUTH_ENDPOINT_AUTHORIZE=/oauth/authorize
OAUTH_ENDPOINT_TOKEN=/oauth/token
OAUTH_ENDPOINT_USER_INFO=/api/user/me
OAUTH_ENDPOINT_REVOKE=/oauth/revoke

# === Mapping des champs utilisateur (simplifiés) ===
# Configurez ces valeurs selon votre provider OAuth
OAUTH_USER_FIELD_ID=id
OAUTH_USER_FIELD_EMAIL=email
OAUTH_USER_FIELD_NAME=name

# === Configuration avancée ===
OAUTH_STRICT_MODE=true
OAUTH_REQUEST_TIMEOUT=10000
OAUTH_USE_PKCE=false
OAUTH_USER_AGENT=YourApp/1.0
OAUTH_ACCEPT_HEADER=application/json
