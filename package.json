{
  "name": "RisuServer",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "NODE_OPTIONS=\"--loader ts-node/esm\" node ace build",
    "dev": "NODE_OPTIONS=\"--loader ts-node/esm\" node ace serve --hmr",
    "test": "NODE_OPTIONS=\"--loader ts-node/esm\" node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js",
    "#types/*": "./app/types/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.18",
    "daisyui": "^5.0.43",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.4.0",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/inertia": "^3.1.1",
    "@adonisjs/lucid": "^21.6.1",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/shield": "^8.2.0",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@cartamd/plugin-anchor": "^2.2.0",
    "@cartamd/plugin-attachment": "^4.2.0",
    "@cartamd/plugin-code": "^4.2.0",
    "@cartamd/plugin-emoji": "^4.3.0",
    "@cartamd/plugin-math": "^4.3.1",
    "@cartamd/plugin-slash": "^4.2.0",
    "@cartamd/plugin-tikz": "^4.2.2",
    "@inertiajs/svelte": "^2.0.12",
    "@poppinss/cliui": "^3.0.5",
    "@tailwindcss/vite": "^4.1.10",
    "@vinejs/vine": "^3.0.1",
    "better-sqlite3": "^11.10.0",
    "carta-md": "^4.11.1",
    "cli-boxes": "^3.0.0",
    "crypto-js": "^4.2.0",
    "cytoscape": "^3.32.0",
    "cytoscape-cola": "^2.5.1",
    "edge.js": "^6.2.1",
    "luxon": "^3.6.1",
    "reflect-metadata": "^0.2.2",
    "svelte": "^5.33.19",
    "tailwindcss": "^4.1.10",
    "vis-network": "^9.1.12"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "cli-boxes": "^3.0.0"
  },
  "prettier": "@adonisjs/prettier-config"
}
