# Configuration de développement pour la cartographie des services Kalya

# ================================
# Configuration de base
# ================================
TZ=Europe/Paris
PORT=3333
HOST=localhost
LOG_LEVEL=debug
APP_KEY=votre-app-key-32-caracteres-ici
NODE_ENV=development

# ================================
# Session et sécurité
# ================================
SESSION_DRIVER=cookie
CSRF_ENABLED=true

# ================================
# Base de données (SQLite pour dev)
# ================================
DB_CONNECTION=sqlite
DB_DATABASE=tmp/db.sqlite3

# ================================
# Configuration OAuth Kalya
# ================================
OAUTH_BASE_URL=https://auth.kalya.com
OAUTH_CLIENT_ID=votre-client-id-oauth
OAUTH_CLIENT_SECRET=votre-client-secret-oauth
OAUTH_REDIRECT_URI=http://localhost:3333/auth/callback

# ================================
# Configuration des icônes
# ================================
# Dossier des icônes (par défaut: public/icons)
ICONS_PATH=public/icons
# Taille max des icônes en Ko (par défaut: 512)
MAX_ICON_SIZE=512

# ================================
# Configuration du réseau Vis.js
# ================================
# Stabilisation automatique (true/false)
NETWORK_AUTO_STABILIZE=true
# Physique activée par défaut (true/false)
NETWORK_PHYSICS_ENABLED=true
# Lissage des arêtes (true/false)
NETWORK_SMOOTH_EDGES=true

# ================================
# Configuration de développement
# ================================
# Mode debug pour les requêtes SQL
DB_DEBUG=true
# Hot reload pour Vite
VITE_HMR=true
# Affichage des erreurs détaillées
SHOW_ERROR_DETAILS=true

# ================================
# Configuration optionnelle
# ================================
# Webhook pour notifications (optionnel)
WEBHOOK_URL=

# Intégration monitoring (optionnel)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=

# Cache Redis (optionnel, par défaut en mémoire)
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# ================================
# Variables spécifiques à l'équipe
# ================================
# Nom de l'organisation
ORG_NAME=Kalya
# URL de base des repositories
DEFAULT_REPO_BASE=https://github.com/kalya
# URL de la documentation
DOCS_BASE_URL=https://docs.kalya.com

# ================================
# Configuration de développement avancée
# ================================
# Désactiver la validation OAuth en dev (pour tests)
SKIP_OAUTH_VALIDATION=false
# Utilisateur de test automatique
TEST_USER_ID=
TEST_USER_EMAIL=damien@kalya.com
TEST_USER_NAME=Damien Marill

# ================================
# Configuration des notifications
# ================================
# Notifications push (optionnel)
PUSH_NOTIFICATIONS=false
# Email pour les alertes système
ADMIN_EMAIL=admin@kalya.com

# ================================
# Variables d'environnement Vite
# ================================
# Préfixer avec VITE_ pour que Vite les expose côté client
VITE_APP_NAME="Cartographie Services Kalya"
VITE_APP_VERSION="1.0.0"
VITE_NETWORK_UPDATE_INTERVAL=30000
VITE_ENABLE_DEBUG_MODE=true
